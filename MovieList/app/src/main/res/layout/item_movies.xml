<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp">


    <RelativeLayout
        android:id="@+id/rl_ig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_ig"
            android:layout_width="130dp"
            android:layout_height="200dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/the_imitation_game" />

        <TextView
            android:id="@+id/tv_movie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_ig"
            android:text="The Imitation Game"
            android:textColor="@color/primary_text"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_category2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_movie_name"
            android:layout_below="@id/tv_movie_name"
            android:text="(Drama , Science)"
            android:textColor="@color/primary_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_popularity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_category2"
            android:layout_below="@id/tv_category2"
            android:text="Current Popularity"
            android:textColor="@color/primary_text" />

        <RatingBar
            android:id="@+id/rb_rating"
            style="?attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_popularity"
            android:layout_below="@id/tv_popularity"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="4.5" />

        <Button
            android:id="@+id/btn_movie_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_ig"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="100dp"
            android:layout_toEndOf="@id/iv_ig"
            android:background="@drawable/button"
            android:foreground="@drawable/ripple_white"
            android:padding="8dp"
            android:text="Movie Review"
            android:textAllCaps="false"
            android:textColor="#ffffff" />

            <FrameLayout
                android:id="@+id/fl_favourite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/iv_ig"
                    android:layout_margin="2dp"
                    android:src="@drawable/ic_favorite_orange_36dp" />

                <TextView
                    android:id="@+id/tv_movie_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="cursive"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="9dp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="4.5"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

            </FrameLayout>

        <ImageView
            android:id="@+id/btn_fullscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_ig"
            android:layout_alignRight="@id/iv_ig"
            android:layout_margin="1dp"
            android:src="@drawable/ic_fullscreen_white_24dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
